<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/applogo"
        android:src="@drawable/blockchain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:id="@+id/google_signin"
        android:layout_below="@id/applogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Sign in with Google"
        android:background="#db3236"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/facebook_signin"
        android:layout_below="@id/google_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Sign in with Facebook"
        android:background="#3b5998"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/kyc_signin"
        android:layout_below="@id/facebook_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Sign in with KYC"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</RelativeLayout>