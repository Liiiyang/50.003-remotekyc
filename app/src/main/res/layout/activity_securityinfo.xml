<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/note"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="94dp"
        android:layout_marginStart="13dp"
        android:text="DO NOT REVEAL YOUR PRIVATE KEY TO ANYONE. KEEP IT IN A SAFE AND SECURE PLACE"
        android:textColor="#F00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noteone"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/note"
        android:layout_marginStart="13dp"
        android:layout_marginTop="-96dp"
        android:text="CONTACT ADMINISTRATOR IF YOU HAVE LOST YOUR PRIVATE KEY"
        android:textColor="#F00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notetwo"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/noteone"
        android:layout_marginStart="13dp"
        android:text="THE KYC TEAM WILL NEVER ASK FOR YOUR PRIVATE KEY"
        android:textColor="#F00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/publickey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/note"
        android:layout_marginTop="47dp"
        android:text="publickey here"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/privatekey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/note"
        android:layout_below="@+id/publickey"
        android:text="privatekey here"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:background="@color/yellow"
        android:onClick="login"
        android:text="Go to Login" />


</RelativeLayout>