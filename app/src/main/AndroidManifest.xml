<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liyang.remotekyc">

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".EmailPasswordVerification"
            android:parentActivityName=".KYCMain"/>

        <activity android:name=".KYCMain"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".KYCSecondStep" />

        <activity android:name=".RegisterKYC"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".SomeHomePage" />

        <activity android:name=".FingerprintVerification"
            android:parentActivityName=".KYCSecondStep"/>

        <activity android:name=".resetpassword"
            android:parentActivityName=".KYCMain"/>

        <activity android:name=".SmsOtpVerfication"
            android:parentActivityName=".KYCSecondStep"/>

        <activity android:name=".BarcodeVerification"
            android:parentActivityName=".KYCMain"/>

        <activity android:name=".securityinfo"
            android:parentActivityName=".RegisterKYC"/>

        <activity android:name=".SecurityVerification"
            android:parentActivityName=".KYCMain"/>

    </application>

</manifest>